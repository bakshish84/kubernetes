apiVersion: v1
kind: Config       #  Resource Type
clusters:          # Specifies the cluster with is server and URL and Certificate authority (CA)
- name: my-cluster
cluster:
server: https://api.example.com
certificate-authority-data: <ca-data>
users:            # specify the users with their client certifcate and client key name, so only authorized users can access the kubernetes cluster.
- name: my-user
user:
client-certificate-data: <client-cert-data>
client-key-data: <client-key-data>
contexts:         # specify the cluster, user and namespace information that had been defined above. You can create muultiple contexts and switch between different clusters at any time.
- name: my-context
context:
cluster: my-cluster
user: my-user
namespace: my-namespace
current-context: my-context  #specifies that on which cluster the command should run.